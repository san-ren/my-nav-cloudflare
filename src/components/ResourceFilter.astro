---
// src/components/ResourceFilter.astro
// 资源筛选按钮组件

import { Filter } from 'lucide-react';
---

<div class="resource-filter-container relative">
  <input type="checkbox" id="resource-filter-toggle" class="resource-filter-checkbox hidden" />
  <label for="resource-filter-toggle" class="filter-toggle-btn p-2 text-slate-600 dark:text-slate-300 bg-white/80 dark:bg-gray-800/80 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 cursor-pointer hover:text-brand-600 transition-colors flex items-center gap-1">
    <Filter size={18} />
    <span class="hidden sm:inline text-xs font-medium">筛选</span>
  </label>
  
  {/* 下拉菜单 */}
  <div class="filter-dropdown absolute right-0 top-full mt-2 w-56 bg-white dark:bg-gray-800 rounded-xl shadow-xl border border-gray-200 dark:border-gray-700 p-3 opacity-0 invisible transition-all duration-200 z-50">
    <div class="text-xs font-bold text-slate-500 dark:text-slate-400 mb-3 uppercase tracking-wider">资源配置</div>
    
    {/* 长期未更新资源开关 */}
    <label class="flex items-center justify-between p-2 rounded-lg hover:bg-slate-50 dark:hover:bg-gray-700/50 cursor-pointer transition-colors">
      <span class="flex items-center gap-2 text-sm text-slate-700 dark:text-slate-300">
        <span class="w-2 h-2 rounded-full bg-amber-400"></span>
        长期未更新
      </span>
      <input type="checkbox" id="show-stale" class="show-stale-checkbox w-4 h-4 rounded border-gray-300 text-brand-600 focus:ring-brand-500" checked />
    </label>
    
    {/* 失效资源开关 */}
    <label class="flex items-center justify-between p-2 rounded-lg hover:bg-slate-50 dark:hover:bg-gray-700/50 cursor-pointer transition-colors">
      <span class="flex items-center gap-2 text-sm text-slate-700 dark:text-slate-300">
        <span class="w-2 h-2 rounded-full bg-red-400"></span>
        已失效
      </span>
      <input type="checkbox" id="show-failed" class="show-failed-checkbox w-4 h-4 rounded border-gray-300 text-brand-600 focus:ring-brand-500" />
    </label>
    
    <div class="mt-3 pt-3 border-t border-gray-100 dark:border-gray-700 text-xs text-slate-400">
      失效资源默认隐藏
    </div>
  </div>
</div>
